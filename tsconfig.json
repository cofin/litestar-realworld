{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "src/realworld/domain/web",
    "paths": {
      "@/*": ["./resources/*"]
    },
    "types": ["vite/client", "node"]
  },
  "include": [
    "**/*.d.ts",
    "src/realworld/domain/web/resources/**/*.js",
    "src/realworld/domain/web/resources/**/*.ts",
    "vite.config.ts",
    "vite.config.js"
  ]
}
